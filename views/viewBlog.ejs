<%- include ('header.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">


<% Blogs.map((blogg,index)=>{%>
  <div class="card" style="width: 22rem; background-color: rgb(62, 61, 61); height: 40rem; margin-top: 100px; margin-right: 30px; box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;margin-left: 10px;">
    <img src="<%= blogg.blogImage %>" class="card-img-top" alt="..." style="height: 300px; object-fit: cover;">
    <div class="card-body">
      <h5 class="card-title" style="font-size: 22px;"><%= blogg.title%></h5>
      <p class="card-text"><%= blogg.desc%> </p>
      <p class="card-text"><%= blogg.date%> </p>
      <p style="text-align: right;">- <%= blogg.author %></p>
      <div class="wrap" style="display: flex; justify-content: center;">
        <a href="/blog/viewBlog<%=blogg.id%>" style="color: rgb(91, 91, 194); font-size: 22px;"><button style="border: none; border-radius: 5px; margin-right: 10px; padding: 5px 10px;"><i class="fa-solid fa-eye"></i></a></button>
        <a href="/blog/editBlog<%=blogg.id%>" style=" font-size: 22px;"><button style="border: none; border-radius: 5px; margin-right: 10px; padding: 5px 10px; "><i class="fa-solid fa-pen-to-square" style="color:  rgb(55, 196, 55);;"></i></button></a>
        <a href="/blog/deleteBlog<%=blogg.id%>" style=" font-size: 22px;"><button style="border: none; border-radius: 5px; margin-right: 10px; padding: 5px 10px;"><i class="fa-solid fa-trash" style="color: rgb(212, 53, 53);;"></i></button></a>

      </div>

    </div>
  </div>

<%})%>

        <!-- partial -->

        <!-- main-panel ends -->
      </div>
      
      <!-- page-body-wrapper ends -->
    </div>
